<?xml version="1.0"?>
<ruleset name="MySymfonyProject">
    <description>CodeSniffer rules for CobbleAuth project</description>
    <rule ref="vendor/symfony/php-cs-fixer/.php_cs"/>
    <arg name="basepath" value="."/>
    <file>src</file>
    <file>tests</file>
    <exclude-pattern>*/Resources/*</exclude-pattern>
    <arg name="colors"/>
    <arg name="tab-width" value="4"/>
    <arg name="encoding" value="utf-8"/>
    <arg name="extensions" value="php"/>
    <arg name="parallel" value="8"/>
    <arg value="s"/>
    <arg name="warning-severity" value="0"/>
    <arg name="report" value="full"/>
    <arg name="report-file" value="var/phpcs_report.txt"/>
</ruleset>
